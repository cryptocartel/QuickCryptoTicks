{
	"manifest_version": 2,
	"content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
	"name": "Quick CryptoTicks",
	"description": "Easy to use extension to lookup any cryptocurrency ticker quickly on coinmarketcap.com",
	"version": "1.0",

	"content_scripts": [
	    {
	      "matches": ["http://*/*", "https://*/*"],
	      "js": ["popup.js"]
	    }
	  ],
	"icons":
	{
		"48": "icon.png"
	},
	"browser_action":
	{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions":
	[
		"contextMenus",
		"tabs",
		"<all_urls>"
	],
	"background":
	{
		"scripts": ["background.js", "main.js"]
	}
}
